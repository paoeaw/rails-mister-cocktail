<div class="container">
  <h2><%= @cocktail.name %></h2>
  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail.id) %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %>&nbsp;<%= dose.ingredient.name %> <%= link_to raw("<span><i class='fas fa-backspace'></i></span>"), dose_path(dose.id), method: :delete, data: { confirm: "Are you sure?"} %></li>
    <% end %>
  </ul>
  <%= link_to "Back", cocktails_path %>
</div>
