<!DOCTYPE html>
<html>
  <head>
    <title>Black Cocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <div class="navbar fixed-top justify-content-between">
      <h5> <%= link_to "cocktail", cocktails_path, class: 'home-button' %></h5>
      <%= link_to raw("<span><i class='fas fa-cocktail'></i>&nbsp;Add a cocktail</span>"), new_cocktail_path, class: 'add-cocktail' %>
    </div>
    <%= yield %>

    <%= javascript_include_tag "application" %>
    <%= javascript_pack_tag "application" %>
  </body>
</html>
