<div class="container">
  <div class="form pb-4 mb-3">
    <h1 class="mt-5 mb-3">Add dose</h1>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.button :submit, class: 'btn btn-outline-light' %>
    <% end %>
  </div>
  <%= link_to raw("<small><i class='fas fa-undo-alt'></i></small>&nbsp;Return to cocktail list"), cocktails_path, class: 'home-button' %>
</div>
